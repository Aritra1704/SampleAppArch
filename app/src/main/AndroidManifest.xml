<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="sampleproj.charlesng0209.com.sampleapparch">

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity
      android:label="@string/app_name"
      android:name=".architecture.ui.MainActivity" />
    <activity
      android:label="@string/title_activity_pager"
      android:name=".architecture.ui.viewpager.PagerActivity"
      android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
      android:label="@string/title_email_list"
      android:name=".architecture.ui.masterdetail.EmailListActivity"
      android:theme="@style/AppTheme.NoActionBar">

    </activity>
    <activity
      android:label="@string/title_email_detail"
      android:name=".architecture.ui.masterdetail.EmailDetailActivity"
      android:parentActivityName=".architecture.ui.masterdetail.EmailListActivity"
      android:theme="@style/AppTheme.NoActionBar">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value=".architecture.ui.masterdetail.EmailListActivity" />
    </activity>
    <activity
      android:label="@string/title_activity_app_arch_navigation_drawer"
      android:name=".architecture.ui.AppArchNavigationDrawer"
      android:theme="@style/AppTheme.NoActionBar">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
  </application>

</manifest>